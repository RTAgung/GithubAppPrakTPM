<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:background="@color/black_50"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/det_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/det_update"
        tools:text="nama repos"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/det_bahasa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/det_nama"
        tools:text="bahasa repos"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/det_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        tools:text="12/5/2000"
        android:textSize="14sp" />
</RelativeLayout>